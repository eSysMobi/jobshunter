<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5" >

        <View
            android:id="@+id/centerLine1"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@null" />

        <ImageButton
            android:id="@+id/goToFavBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/centerLine1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/fav" />

        <ImageButton
            android:id="@+id/findBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/centerLine1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/find" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5" >

        <ImageButton
            android:id="@+id/cvBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/centerLine2"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/resume" />

        <View
            android:id="@+id/centerLine2"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@null" />

        <ImageButton
            android:id="@+id/subBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/cvBtn"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/subs" />

    </RelativeLayout>

</LinearLayout>